{
  "type": "module",
  "scripts": {
    "dev": "tsx watch --require ./otel/console.ts src/index.ts",
    "start": "dotenvx run -- tsx src/index.ts",
    "start:otel:console": "dotenvx run -- tsx --require ./otel/console.ts src/index.ts",
    "start:otel:http": "dotenvx run -- tsx --require ./otel/http.ts src/index.ts",
    "start:otel:baselime": "dotenvx run -- tsx --require ./otel/baselime.ts src/index.ts",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "pnpm lint --apply",
    "lint:repo": "sherif",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "migrate": "pnpm drizzle-kit generate && pnpm tsx scripts/migrate.ts",
    "typia:generate": "pnpm typia generate --input src/validators --output src/generated/typia --project tsconfig.json",
    "preinstall": "npx only-allow pnpm",
    "prepare": "ts-patch install && typia patch && pnpm simple-git-hooks"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "^1.8.0"
    }
  },
  "dependencies": {
    "@baselime/node-opentelemetry": "^0.5.8",
    "@hono/node-server": "^1.13.0",
    "@hono/node-ws": "1.0.4",
    "@noble/curves": "^1.4.2",
    "@noble/hashes": "^1.4.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.53.0",
    "@opentelemetry/sdk-metrics": "^1.26.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "@opentelemetry/sdk-trace-node": "^1.26.0",
    "better-sqlite3": "^10.0.0",
    "bufferutil": "^4.0.8",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.6.2",
    "typia": "^6.5.0",
    "uuidv7": "^1.0.2",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@dotenvx/dotenvx": "^1.14.0",
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.11.17",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^2.0.5",
    "drizzle-kit": "^0.21.4",
    "nostr-tools": "^2.7.2",
    "sherif": "^0.8.4",
    "simple-git-hooks": "^2.11.1",
    "ts-patch": "^3.2.1",
    "tsx": "^4.11.0",
    "typescript": "^5.5.2",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  }
}